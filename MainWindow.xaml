<Window x:Class="Desenvolvimento_de_tela_com_panel.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cálculo de IMC" Height="300" Width="300">
    <Grid Margin="0,2,0,4">
        <Grid.Background>
            <ImageBrush ImageSource="/Captura de tela 2023-04-11 170923.png"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Peso (kg):" Foreground="#FFF7F5F5" />
            <TextBox x:Name="txtPeso" Width="200" />
            <Label Content="Altura (m):" Foreground="White" />
            <TextBox x:Name="txtAltura" Width="200" />
            <Button Content="Calcular IMC" Click="btnCalcular_Click" Margin="0,10,0,0" Background="#FF1DB11F" />
            <Label x:Name="lblResultado" Content="" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>